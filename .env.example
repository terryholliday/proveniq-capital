# Proveniq Capital - Environment Configuration
# Copy to .env and fill in values

# Server
PORT=3100
NODE_ENV=development

# PostgreSQL (Financial Ledger)
DATABASE_URL=postgresql://proveniq:password@localhost:5432/proveniq_capital
DB_HOST=localhost
DB_PORT=5432
DB_NAME=proveniq_capital
DB_USER=proveniq
DB_PASSWORD=password

# ClaimsIQ Integration
CLAIMSIQ_BASE_URL=http://localhost:3000
CLAIMSIQ_API_KEY=your_claimsiq_api_key
CLAIMSIQ_WEBHOOK_SECRET=your_webhook_secret

# Stripe (Fiat Rails)
STRIPE_SECRET_KEY=sk_test_your_stripe_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# USDC Mock (Crypto Rails)
USDC_MOCK_ENABLED=true
USDC_NETWORK=ethereum-sepolia

# Treasury Thresholds (in cents)
MANUAL_APPROVAL_THRESHOLD_CENTS=1000000
CRITICAL_RESERVE_MINIMUM_CENTS=10000000

# Security
JWT_SECRET=your_jwt_secret_for_admin_api
ADMIN_API_KEY=your_admin_api_key
