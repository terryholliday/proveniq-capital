# Proveniq Capital - Environment Configuration
# Copy to .env and fill in values

# Server
PORT=3100
NODE_ENV=development
ADMIN_API_KEY=your_admin_api_key

# PostgreSQL (Financial Ledger)
# Supabase/PostgreSQL - Get these from your Supabase project dashboard
DATABASE_URL=postgres://postgres:[YOUR_PASSWORD]@[YOUR_PROJECT].supabase.co:6543/postgres?sslmode=require

# ClaimsIQ Integration
CLAIMSIQ_BASE_URL=http://localhost:3005
CLAIMSIQ_API_KEY=your_claimsiq_api_key
CLAIMSIQ_WEBHOOK_SECRET=your_webhook_secret

# PROVENIQ Ecosystem Services
PROVENIQ_LEDGER_URL=http://localhost:8006/api/v1
CORE_SERVICE_URL=http://localhost:8000

# Stripe (Fiat Rails)
STRIPE_SECRET_KEY=sk_test_your_stripe_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Firebase (optional if verifying ID tokens)
FIREBASE_PROJECT_ID=gen-lang-client-0226043550
GOOGLE_APPLICATION_CREDENTIALS="C:/Users/Admin1/Desktop/AI Projects/SECRET KEYS/proveniq-tech-service-account.json"

# USDC Mock (Crypto Rails)
USDC_MOCK_ENABLED=true
USDC_NETWORK=ethereum-sepolia

# Treasury Thresholds (in cents)
MANUAL_APPROVAL_THRESHOLD_CENTS=1000000
CRITICAL_RESERVE_MINIMUM_CENTS=10000000

# Security
JWT_SECRET=your_jwt_secret_for_admin_api

# ============================================
# DATA ARCHITECT AGENT - External APIs
# ============================================

# Gmail API (Purchase receipts, warranty emails)
# Get from: https://console.cloud.google.com/apis/credentials
GMAIL_API_URL=https://gmail.googleapis.com/gmail/v1
GMAIL_CLIENT_ID=your_gmail_client_id
GMAIL_CLIENT_SECRET=your_gmail_client_secret
GMAIL_REDIRECT_URI=http://localhost:3100/api/auth/gmail/callback

# Plaid API (Bank accounts, income verification)
# Get from: https://dashboard.plaid.com/developers/keys
PLAID_API_URL=https://sandbox.plaid.com
PLAID_CLIENT_ID=your_plaid_client_id
PLAID_SECRET=your_plaid_secret
PLAID_ENV=sandbox

# eBay API (Seller history, marketplace activity)
# Get from: https://developer.ebay.com/my/keys
EBAY_API_URL=https://api.ebay.com
EBAY_APP_ID=your_ebay_app_id
EBAY_CERT_ID=your_ebay_cert_id
EBAY_DEV_ID=your_ebay_dev_id

# LeadsOnline API (Law enforcement - stolen property checks)
# Get from: LeadsOnline partnership agreement
LEADS_ONLINE_API_URL=https://api.leadsonline.com
LEADS_ONLINE_API_KEY=your_leadsonline_api_key

# Ledger (PROVENIQ internal)
LEDGER_API_URL=http://localhost:8006/api/v1
