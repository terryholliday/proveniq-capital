# Proveniq Capital - Environment Configuration
# Copy to .env and fill in values

# Server
PORT=3100
NODE_ENV=development
ADMIN_API_KEY=your_admin_api_key

# PostgreSQL (Financial Ledger)
# Supabase/PostgreSQL - Get these from your Supabase project dashboard
DATABASE_URL=postgres://postgres:[YOUR_PASSWORD]@[YOUR_PROJECT].supabase.co:6543/postgres?sslmode=require


# ClaimsIQ Integration
CLAIMSIQ_BASE_URL=http://localhost:3000
CLAIMSIQ_API_KEY=your_claimsiq_api_key
CLAIMSIQ_WEBHOOK_SECRET=your_webhook_secret

# Stripe (Fiat Rails)
STRIPE_SECRET_KEY=sk_test_your_stripe_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Firebase (optional if verifying ID tokens)
FIREBASE_PROJECT_ID=gen-lang-client-0226043550
GOOGLE_APPLICATION_CREDENTIALS="C:/Users/Admin1/Desktop/AI Projects/SECRET KEYS/proveniq-tech-service-account.json"

# USDC Mock (Crypto Rails)
USDC_MOCK_ENABLED=true
USDC_NETWORK=ethereum-sepolia

# Treasury Thresholds (in cents)
MANUAL_APPROVAL_THRESHOLD_CENTS=1000000
CRITICAL_RESERVE_MINIMUM_CENTS=10000000

# Security
JWT_SECRET=your_jwt_secret_for_admin_api
